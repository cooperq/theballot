<h1><%= @user.login %></h1>

<%= image_tag @user.avatar.public_filename if @user.avatar %>

<div id="user-profile-location">
<%= @user.city %>, <%= @user.state %>
</div>

<% if @user.guides -%>
<h2>Guides:</h2>
<div id="user-guides-list">
<% @user.guides.each do |guide| %>
<div class="user-guides-list-item"><%= link_to guide.name, guide.permalink %></div>
<% end -%>
</div>
<% end -%>

