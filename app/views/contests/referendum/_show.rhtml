<span><b>Issue: <%= contest.name %></b></span> <%= link_to_remote 'edit', :url => { :controller => '/contests/referendum', :action => 'edit', :id => contest.id, :choice_id => contest.choice.id }, :method => :get %> <%= link_to_remote 'delete', :url => { :controller => '/contests', :action => 'destroy', :id => contest.id } %><br/>
<% if contest.choice -%>
<%= truncate contest.choice.description %><br/>
<span id="choice_<%= contest.choice.id %>_selection"><%= contest.choice.selection %></span>
<% end -%>
