<% if contest.id && ( @recently_updated_contest || @recently_created_contest || !choice.id.nil? ) -%>
<b><%= contest.name %></b> <%= link_to_remote 'edit', { :url => { :controller => '/contests/candidate', :action => 'edit', :id => contest.id }, :method => :get } %><br />
<i><%= contest.description %></i>
<ul id="contest_choices_preview">
  <%= render :partial => 'guides/choice', :collection => contest.choices %>
</ul>
<% end -%>
