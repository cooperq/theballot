<% @guide_title = @guide.name + ' (' + @guide.state + ')' %>
<% #add theme stylesheet links
if !@guide.theme.nil?
  if !@guide.theme.style_url.nil? && !@guide.theme.style_url.empty?
    content_for :stylesheets do %>
      <%= tag('link', { 'rel' => 'Stylesheet', 'type' => 'text/css', 'media' => 'all', 'href' => @guide.theme.style_url }) %>
<%  end
  elsif @guide.theme.style
    content_for :stylesheets do %>
      <%= tag('link', { 'rel' => 'Stylesheet', 'type' => 'text/css', 'media' => 'all', 'href' => url_for( :controller => 'styles', :action => 'show', :id => @guide.theme.style.id, :format => 'css' ) }) %>
<%  end
  end
  if !@guide.theme.print_style_url.nil? && !@guide.theme.print_style_url.empty?
    content_for :print_stylesheets do %>
      <%= tag('link', { 'rel' => 'Stylesheet', 'type' => 'text/css', 'media' => 'print', 'href' => @guide.theme.print_style_url }) %>
<%  end
  elsif @guide.theme.print_style
    content_for :print_stylesheets do %>
      <%= tag('link', { 'rel' => 'Stylesheet', 'type' => 'text/css', 'media' => 'print', 'href' => url_for( :controller => 'styles', :action => 'show', :id => @guide.theme.print_style.id, :format => 'css' ) }) %>
<%  end
  end
end 
%>

<div id="main">
  <% unless @guide.endorsed -%>
    <div id="unendorsed">Voter guides like this one on theballot.org are submitted by website users.  They may not reflect the position of the League of Young Voters PAC.</div>
  <% end -%>

