<h1>Account</h1>

<p><label>Login:</label><%= @user.login %></p>

<% if current_user.is_admin? %>
<p><label>Admin?:</label><span id="admin"><% if @user.is_admin? %>Yes<% else %>No<% end %></span>
  <br/>
<% if @user.is_admin? %>
<%= link_to_remote "remove from admin", :url => { :action => 'remove_admin', :id => @user }, :update => 'admin' %>
<% else %>
<%= link_to_remote "make admin", :url => { :action => 'add_admin', :id => @user }, :update => 'admin' %>
<% end %>
<% end %>
